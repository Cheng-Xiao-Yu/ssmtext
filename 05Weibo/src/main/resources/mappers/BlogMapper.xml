<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tedu.weibo.mapper.BlogMapper">
    <insert id="insert">
        INSERT INTO blog(content,created,user_id)
        VALUES(#{content},#{created},#{userId})
    </insert>
    <select id="findAll" resultType="com.tedu.weibo.pojo.vo.BlogIndexVO">
        SELECT b.id,b.content,u.nickname
        FROM blog b
        JOIN user u ON u.id=b.user_id
    </select>
    <select id="findById" resultType="com.tedu.weibo.pojo.vo.WeiboDetailVO">
        SELECT b.id,b.content,b.created,u.nickname
        FROM blog b
                 JOIN user u ON u.id=b.user_id
        WHERE b.id=#{id}
    </select>
</mapper>