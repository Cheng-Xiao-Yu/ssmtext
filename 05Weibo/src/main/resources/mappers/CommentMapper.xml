<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tedu.weibo.mapper.CommentMapper">
    <insert id="insert">
        INSERT INTO comment(content,created,user_id,blog_id)
        VALUES(#{content},#{created},#{userId},#{blogId})
    </insert>
    <select id="findByWeiboId" resultType="com.tedu.weibo.pojo.vo.CommentDetailVO">
        SELECT c.content,c.created,u.nickname
        FROM comment c
        JOIN user u ON u.id=c.user_id
        WHERE u.id=#{id}
    </select>
</mapper>